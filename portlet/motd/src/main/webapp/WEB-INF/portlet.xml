<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>motd</portlet-name>
		<display-name>Maintenance Warning</display-name>
		<portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/jsp/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
        <resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Maintenance Warning</title>
			<short-title>Maintenance Warning</short-title>
			<keywords>maintenance warning</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
    </portlet>

    <portlet>
        <portlet-name>maintenance-warning-cp</portlet-name>
        <display-name>Maintenance Warning</display-name>
        <portlet-class>org.nterlearning.motd.portlet.MaintenanceWarning</portlet-class>
        <init-param>
            <name>view-jsp</name>
            <value>/jsp/cp/view.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <resource-bundle>content.Language</resource-bundle>
        <portlet-info>
            <title>Maintenance Warning</title>
            <short-title>Maintenance Warning</short-title>
            <keywords>Maintenance Warning Control Panel</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
    </portlet>
</portlet-app>