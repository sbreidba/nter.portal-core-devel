<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}:%L] %m%n"/>
        </layout>
    </appender>

    <appender name="DRFA" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${catalina.base}/logs/nutch.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <param name="append" value="true"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p %c{2} - %m%n"/>
        </layout>
    </appender>

    <category name="org.apache.axiom" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.commons" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.cxf" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.hadoop">
        <level value="WARN"/>
    </category>

    <category name="org.apache.http">
        <level value="WARN"/>
    </category>

    <category name="org.apache.nutch" additivity="false">
        <level value="WARN"/>
    </category>

    <category name="org.apache.nutch.crawl">
        <level value="INFO"/>
        <appender-ref ref="DRFA"/>
    </category>

    <category name="org.apache.nutch.fetcher">
        <level value="INFO"/>
        <appender-ref ref="DRFA"/>
    </category>

    <category name="org.apache.nutch.indexer">
        <level value="INFO"/>
        <appender-ref ref="DRFA"/>
    </category>

    <category name="org.apache.nutch.parse.ParseSegment">
        <level value="INFO"/>
        <appender-ref ref="DRFA"/>
    </category>

    <category name="org.apache.nutch.plugin.PluginRepository">
        <level value="WARN"/>
        <appender-ref ref="DRFA"/>
    </category>

    <category name="org.apache.nutch.protocol">
        <level value="WARN"/>
        <appender-ref ref="DRFA"/>
    </category>

    <category name="org.apache.nutch.segment">
        <level value="INFO"/>
        <appender-ref ref="DRFA"/>
    </category>

    <!--
    <root>
        <priority value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DRFA"/>
    </root>
    -->
</log4j:configuration>